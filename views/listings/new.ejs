<% layout('layouts/boilerplate.ejs') -%>

<body>
    <br>
    <h3>Create a new listings</h3>
    <br>
   <div class="col-8 offset-1">
    <form method="POST" action="/listings" class="needs-validation" enctype="multipart/form-data" novalidate>
        <div>
        <label class="form-label" for="title">Title</label>
        <input required class="form-control" type="text" placeholder="Enter Title" name="listing[title]">
        <div class="valid-feedback">
            Title looks good !
        </div>
        </div>
        <br>
        <br>
       <div>
        <label class="form-label" for="description">Description</label>
        <textarea required class="form-control" name="listing[description]" id="description" cols="30" rows="5" placeholder="Enter description here"></textarea>
        <div class="invalid-feedback">
            Discription must be between 1-300
          </div>
       </div>
        <br>
        <br>
       <div> <label class="form-label" for="imageUrl">Upload Listing Image</label>
        <input required class="form-control" type="file" name="listing[image]">
        </div><br>
        <br>
       <div>
        <label class="form-label" for="price">Price</label>
        <input required class="form-control" type="text" placeholder="Enter Price" name="listing[price]">
        <div class="invalid-feedback">
            Enter a valid price
          </div>
        </div>
        <br>
        <br>
       <div>
            <label class="form-label" for="location">Location</label>
            <input required class="form-control" type="text" placeholder="Enter location" name="listing[location]">
            <div class="invalid-feedback">
                Enter a valid location
              </div>
        </div>
        <br>
        <br>
        <div>
            <label class="form-label" for="country">Country</label>
            <input required class="form-control" type="text" placeholder="Enter country" name="listing[country]">
            <div class="invalid-feedback">
                Enter a valid country
              </div>
        </div>
        <br>
        <br>
        <button class="btn btn-primary "> Add</button>
        <br><br>
    </form>
   </div>
</body>
